<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Plantilla de la factura -->

    <template id="report_invoice_document">
      <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context(lang=lang)" />
        <div class="page">
          <div class="row">
            <div class="col-6 text-center text-light bg-dark text-uppercase">
              <span>Documento Tributario Electrónico</span>
            </div>
            <div class="col-6 text-right font-weight-bold text-capitalize border border-dark">
              <span>Factura</span>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <span>Serie</span>
            </div>
            <div class="col-4 text-center">
              <span>Numero</span>
            </div>
            <div class="col-4 text-right">
              <span>Fecha de emisión</span>
            </div>
          </div>
          <div class="row">
            <div class="col-4 font-weight-bold">
              <span>
                <span t-field="o.fac_serie" />
              </span>
            </div>
            <div class="col-4 text-center font-weight-bold">
              <span>
                <span t-field="o.fac_numero" />
              </span>
            </div>
            <div class="col-4 text-right font-weight-bold">
              <span t-field="o.invoice_date" />
            </div>
          </div>
          <div class="row">
            <div class="col-2">
              <span>No. Autorización: </span>
            </div>
            <div class="col-5 font-weight-bold">
              <span>
                <span t-field="o.fel_firma" />
              </span>
            </div>
            <div class="col-2 text-right">
              <span>Certificación: </span>
            </div>
            <div class="col-3 text-right font-weight-bold">
              <span t-if="o.fecha_certificacion" t-field="o.fecha_certificacion" />
            </div>
          </div>
          <div class="row">
            <div class="col-12 text-center text-light bg-dark text-uppercase">
              <span>Datos del Cliente</span>
            </div>
          </div>
          <div class="row">
            <div class="col-2">
              <span>Nombre:</span>
            </div>
            <div class="col-10 font-weight-bold">
              <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}' />
            </div>
          </div>
          <div class="row">
            <div class="col-2">
              <span>Dirección:</span>
            </div>
            <div class="col-10 font-weight-bold">
              <span t-field="o.partner_id.display_street" />
            </div>
          </div>
          <div class="row">
            <div class="col-2">
              <span>NIT: </span>
            </div>
            <div class="col-2 font-weight-bold">
              <span t-field="o.partner_id.vat" />
            </div>
            <div class="col-2">
              <span>Teléfono: </span>
            </div>
            <div class="col-2 font-weight-bold">
              <span t-field="o.partner_id.phone" />
            </div>
            <div class="col-2 text-right">
              <span>Pedido: </span>
            </div>
            <div class="col-2 text-right font-weight-bold">
              <span t-field="o.invoice_origin" />
            </div>
          </div>
          <div class="row">
            <div class="col-2">
              <span>Vendedor: </span>
            </div>
            <div class="col-6 font-weight-bold">
              <span t-field="o.invoice_user_id.name" />
            </div>
            <div class="col-2 text-right">
              <span>Vencimiento: </span>
            </div>
            <div class="col-2 text-right font-weight-bold">
              <span t-field="o.invoice_date_due" />
            </div>
          </div>

          <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])" />

          <table class="table table-sm o_main_table" name="invoice_line_table">
            <thead>
              <tr>
                <t t-set="colspan" t-value="4" />
                <th name="th_description" class="text-left">
                  <span>Descripción</span>
                </th>
                <th name="th_quantity" class="text-right">
                  <span>Cantidad</span>
                </th>
                <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                  <span>Precio</span>
                </th>
                <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                  <span>Disc.%</span>
                  <t t-set="colspan" t-value="colspan+1" />
                </th>
                <th name="th_subtotal" class="text-right">
                  <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                  <span groups="account.group_show_line_subtotals_tax_included">Importe</span>
                </th>
              </tr>
            </thead>
            <tbody class="invoice_tbody">
              <t t-set="current_subtotal" t-value="0" />
              <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" />

              <t t-foreach="lines" t-as="line">
                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included" />

                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                  <t t-if="not line.display_type" name="account_invoice_line_accountable">
                    <td name="account_invoice_line_name">
                      <span t-field="line.name" t-options="{'widget': 'text'}" />
                    </td>
                    <td class="text-right">
                      <span t-field="line.quantity" />
                      <span t-field="line.product_uom_id" groups="uom.group_uom" />
                    </td>
                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                      <span class="text-nowrap" t-field="line.price_unit" />
                    </td>
                    <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                      <span class="text-nowrap" t-field="line.discount" />
                    </td>
                    <td class="text-right o_price_total">
                      <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                      <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included" />
                    </td>
                  </t>
                  <t t-if="line.display_type == 'line_section'">
                    <td colspan="99">
                      <span t-field="line.name" t-options="{'widget': 'text'}" />
                    </td>
                    <t t-set="current_section" t-value="line" />
                    <t t-set="current_subtotal" t-value="0" />
                  </t>
                  <t t-if="line.display_type == 'line_note'">
                    <td colspan="99">
                      <span t-field="line.name" t-options="{'widget': 'text'}" />
                    </td>
                  </t>
                </tr>

                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                  <tr class="is-subtotal text-right">
                    <td colspan="99">
                      <strong class="mr16">Subtotal</strong>
                      <span t-esc="current_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                    </td>
                  </tr>
                </t>
              </t>
            </tbody>
          </table>

          <div class="clearfix">
            <div id="total" class="row">
              <div class="col-6">
                <t t-foreach="o.journal_id.fel_frases_ids" t-as="frases">
                  <span>
                    <strong><span t-field="frases.fel_escenario.texto"/></strong>
                  </span><br/>
                </t>
              </div>
              <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'}">
                <table class="table table-sm" style="page-break-inside: avoid;">
                  <tr class="border-black o_total">
                    <td>
                      <strong>Total</strong>
                    </td>
                    <td class="text-right">
                      <span class="text-nowrap" t-field="o.amount_total" />
                    </td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
          <p />
          <div class="row">
            <div class="col-8">
              <p class="text-justify">
                <small>
                      FACTURA CAMBIARIA GIRADA LIBRE DE PROTESTO A LA ORDEN O ENDOSO DE INDUSTRIAL MERCANTIL SAN SIMON, SOCIEDAD ANONIMA
                      EL VALOR TOTAL POR EL QUE ESTA EXTENDIDA O POR EL ULTIMO SALDO INSOLUTO QUE APAREZCA. EL VALOR QUEDA SUJETA AL ______ %
                      MENSUAL DE RECARGO SI EXCEDE DEL PLAZO ESTIPULADO EN ESTA. EL CLIENTE ACEPTA Y RECONOCE COMO OBLIGATORIAS LAS CONDICIONES
                      ESPECIFICAS EN ESTA FACTURA. ESTA FACTURA SE CONSIDERA CANCELADA UNICAMENTE MEDIANTE RECIBO DE CAJA.
                    </small>
              </p>
            </div>
            <div class="col-4 text-center">
              <p style="height: 75px;"></p>
              <p class="m-0">___________________________________________</p>
              <p>Firma de Aceptación</p>
            </div>
          </div>


          <p t-if="o.narration" name="comment">
            <span t-field="o.narration" />
          </p>
          <p t-if="o.invoice_payment_term_id" name="payment_term">
            <span t-field="o.invoice_payment_term_id.note" />
          </p>
          <p t-if="o.fiscal_position_id.note" name="note">
            <span t-field="o.fiscal_position_id.note" />
          </p>
          <div t-attf-class="footer">
            <div class="row">
            <link rel="stylesheet" href="/sansimon/static/src/css/report.css" />
            <div class="col-12">
              <hr color="black" style="height: 3px;"/>
            </div>
          </div>
            <div class="row">
              <div class="col-4">
                <span class="text-left text-uppercase">Datos del Certificador</span>
                <br />
                <span>Nombre: </span>
                <span class="font-weight-bold" t-if="o.fel_setting_id" t-field="o.fel_setting_id.proveedor_id.name" />
                <br />
                <span>NIT: </span>
                <span class="font-weight-bold" t-if="o.fel_setting_id" t-field="o.fel_setting_id.proveedor_id.vat" />
              </div>
              <div class="col-4 text-left">
                <br />
                <span>Ref. Int.: </span>
                <span class="font-weight-bold" t-if="o.name != '/'" t-field="o.name" />
                <br />
                <br />
                <div class="text-center no_pagina">
                  Página:
                  <span class="page" />
                  /
                  <span class="topage" />
                </div>
              </div>
              <div class="col-2"><img src="/sansimon/static/description/FEL.PNG" style="max-height:70px;padding-top: 4px;"/></div>
              <div class="col-2 text-right font-weight-bold">

                <div class="row">
                  <link rel="stylesheet" href="/sansimon/static/src/css/report.css" />
                  <div class="col-12 text-right">
                    <img t-if="o.generate_qr()" t-att-src="'data:image/png;base64,%s' % to_text(o.generate_qr())" class="qr_fac" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </t>
    </template>


    <template id="report_invoice_with_payments">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang" />
          <t t-call="sansimon.report_invoice_document" t-lang="lang" />
        </t>
      </t>
    </template>
  </data>
</odoo>