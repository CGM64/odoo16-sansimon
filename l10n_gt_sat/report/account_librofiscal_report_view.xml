<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="librofiscal">
    <t t-call="web.html_container">
      <t t-set="data_report_margin_top" t-value="12"/>
      <t t-set="data_report_header_spacing" t-value="9"/>
      <t t-set="data_report_dpi" t-value="110"/>
      <t t-foreach="docs" t-as="o">

      <t t-foreach="libros" t-as="libro">
        <t t-call="web.basic_layout">
          <div class="header">
						<div class="row">
							<div class="col-3">
								<span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
							</div>
							<div class="col-2 offset-2 text-center">
								<span t-esc="res_company.company_registry"/>
							</div>
							<div class="col-2 offset-3 text-right">
								<t t-set="o" t-value="modelo"/>
								<ul class="list-inline">
									Folio: <t t-call="l10n_gt_sat.counter_folio"></t>
								</ul>
							</div>
						</div>
					</div>
      <div class="page">
        <br/>
              <h3>Libro de
                <span t-esc="libro['descripcion']"/></h3>
              <h5>Del:
                <span t-esc="libro['del']"/>
                Al:
                <span t-esc="libro['al']"/></h5>
                <h5>Resolucion:<span t-esc="data['resolucion']"/></h5>


              <t t-if="libro['libro'] == 'sale'">
                <t t-if="libro['tipo'] == 'detallado'">
                  <t t-call="l10n_gt_sat.librofiscal_ventas"/>
                </t>
                <t t-else="">
                  <t t-call="l10n_gt_sat.librofiscal_ventas_resumido"/>
                </t>
              </t>
              <t t-else="">
                <!-- <t t-call="l10n_gt_sat.librofiscal_compras"/> -->

                <t t-if="libro['tipo'] == 'detallado'">
                  <t t-call="l10n_gt_sat.librofiscal_compras"/>
                </t>
                <t t-else="">
                  <t t-call="l10n_gt_sat.librofiscal_compras_resumido"/>
                </t>
              </t>

            </div>
            <div class="footer">
                 <div class="text-center" style="border-top: 1px solid black;">

                     <ul class="list-inline">
                         <li>Pagina: <span class="page"/>/<span class="topage"/></li>
                     </ul>
                 </div>
             </div>
          </t>
        </t>
      </t>
    </t>
  </template>

