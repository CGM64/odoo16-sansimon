<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">view.order.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'readonly': 1 }</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='discount']" position="attributes">
                <attribute name="attrs">{'readonly': 1 }</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_access_inherit" model="ir.ui.view">
        <field name="name">view.order.access.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(4, ref('l10n_gt_sat.group_cambio_de_precios'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'readonly': 0 }</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='discount']" position="attributes">
                <attribute name="attrs">{'readonly': 0 }</attribute>
            </xpath>
        </field>
    </record>
    

    <record id="view_order_form_access_search" model="ir.ui.view">
        <field name="name">view.order.access.search.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="replace">
                <field name="name" string="Order" filter_domain="['|', '|', '|', '|', ('name', 'ilike', self), ('client_order_ref', 'ilike', self), ('partner_id', 'child_of', self), ('partner_ref', '=', self), ('partner_id.vat', 'like', self)]"/>
            </xpath>
        </field>
    </record>

    <record id="tree" model="ir.ui.view">
        <field name="name">view.order.access.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="partner_ref" optional="hide"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
