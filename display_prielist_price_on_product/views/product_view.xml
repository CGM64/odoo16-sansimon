<odoo>
    <data>
        <record id="display_pricelist_inherit_product_template_form_view" model="ir.ui.view">
            <field name="name">display.product.price.inherit.product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale']" position="before">
                    <div name="sale_pricelists">
                        <separator string="Sale Pricelist Price"/>
                        <field name="sale_pricelists" context="{'product_temp_id': active_id}">
                             <tree string="Sale Pricelist Price">
                                <field name="name"/>
                                <field name="product_price"/>
                            </tree>
                        </field>
                    </div>
                </xpath>

            </field>
        </record>
        <record id="display_pricelist_inherit_product_form_view" model="ir.ui.view">
            <field name="name">display.product.price.inherit.product.product.common.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='sale_pricelists']" position="replace">
                    <div name="sale_pricelists">
                        <separator string="Sale Pricelist Price"/>
                        <field name="sale_pricelists" context="{'product_id': active_id}">
                             <tree string="Sale Pricelist Price">
                                <field name="name"/>
                                <field name="product_price"/>
                            </tree>
                        </field>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>