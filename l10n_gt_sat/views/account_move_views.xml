<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="account_move_l10n_gt_access_form_view" model="ir.ui.view">
          <field name="name">account.move.access.form.view</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="groups_id" eval="[(4, ref('l10n_gt_sat.group_cambio_de_precios'))]"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='price_unit']" position="replace">
                  <field name="price_unit" readonly="0" />
              </xpath>
              <xpath expr="//field[@name='partner_id']" position="attributes">
                  <attribute name="options">{'no_create': True}</attribute>
              </xpath>
<!--
              <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="replace">
                  <field name="discount" string="Disc.%" groups="base.group_no_one" optional="show" attrs="{'readonly': [('price_unit_access', '=', False)]}"/>
              </xpath>
            -->
          </field>
        </record>

        <record id="account_move_l10n_gt_sat_form_view" model="ir.ui.view">
            <field name="name">account.move.gtsat.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='price_unit']" position="replace">
                  <field name="price_unit" readonly="1" />
              </xpath>
              <xpath expr="//field[@name='journal_id']" position="replace">
                     <field name="journal_id" invisible="context.get('default_journal_id') and context.get('type', 'entry') != 'entry'" groups="account.group_account_invoice" options="{'no_create': True}" domain="[('type', '=?', invoice_filter_type_domain)]" attrs="{'readonly': [('name', '!=', '/')]}"/>
              </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="fac_serie"  attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                    <field name="fac_numero" attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                    <field name="journal_tipo_operacion" invisible="1"/>
                </xpath>
                <notebook position="inside">

                   <!-- <page name="duca_page" string="DUCA" attrs="{'invisible': [('journal_tipo_operacion','not in',('DUCA_IN','DUCA_OUT'))]}"> -->
                   <page name="duca_page" string="DUCA"  attrs="{'invisible': [('type', 'not in',  ('in_invoice','in_refund'))]}">

                    <group string="Valores">
                       <group>
                         <field name="sat_invoice_id" domain="[('type', '=', 'in_invoice')]"/>
                         <field name="sat_valor_transaccion"/>
                         <field name="sat_gastos_transporte"/>
                         <field name="sat_gastos_seguros"/>
                       </group>
                       <group>
                         <field name="sat_gastos_otros"/>
                         <field name="sat_tasa_cambio"/>
                       </group>
                    </group>
                    </page>
                    <!-- <page name="anexo_page" string="Anexo" attrs="{'invisible': [('journal_tipo_operacion','not in',('DUCA_IN','DUCA_OUT'))]}"> -->
                    <page name="anexo_page" string="Anexo" attrs="{'invisible': [('type', 'not in',  ('in_invoice'))]}">
                      <field name="sat_invoice_child_ids"/>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="account_move_l10n_gt_sat_tree_view" model="ir.ui.view">
            <field name="name">account.move.l10n_gt_sat.tree.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="fac_serie" optional="hide"/>
                    <field name="fac_numero" optional="show"/>
                    <field name="partner_ref" optional="hide"/>
                </field>
            </field>
          </record>

          <record id="account_move_l10n_gt_access_search_view" model="ir.ui.view">
              <field name="name">account.move.access.search.view</field>
              <field name="model">account.move</field>
              <field name="inherit_id" ref="account.view_account_invoice_filter"/>
              <field name="arch" type="xml">
                  <xpath expr="//field[@name='name']" position="replace">
                      <field name="name" string="Factura"
                           filter_domain="[
                                '|', '|' , '|', '|','|',
                                ('name', 'ilike', self), ('invoice_origin', 'ilike', self),
                                ('ref', 'ilike', self), ('invoice_payment_ref', 'ilike', self),
                                ('partner_id', 'child_of', self),
                                ('partner_ref', '=', self)]"/>
                  </xpath>
    <!--
                  <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="replace">
                      <field name="discount" string="Disc.%" groups="base.group_no_one" optional="show" attrs="{'readonly': [('price_unit_access', '=', False)]}"/>
                  </xpath>
                -->
              </field>
            </record>
      </data>
  </odoo>
