<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_l10n_gt_sat" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.l10n.gt.sat</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="button_unlock" position="after">
                <button name="action_purchase_order_imprimir" type="object" string="Imprimir" states="done" groups="purchase.group_purchase_manager"/>
            </button>

            <xpath expr="//button[@name='button_done']" position="after">
              <button name="aplicar_pago" type="object" string="Anticipo" class="oe_highlight" groups="account.group_account_manager"/>
            </xpath>
        </field>
    </record>
</odoo>
